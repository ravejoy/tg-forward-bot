{
  "name": "tg-forward-bot",
  "version": "1.0.0",
  "description": "A simple Telegram bot that forwards user messages to an admin chat",
  "type": "module",
  "main": "index.js",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup src/index.ts --out-dir dist --format esm --dts",
    "start": "node --enable-source-maps dist/index.js",
    "bot": "npm start",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "format": "prettier -w .",
    "clean": "rimraf dist",
    "prepare": "husky",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:smoke": "vitest run tests/smoke",
    "test:integration": "vitest run tests/integration"
  },
  "keywords": [],
  "author": "Nazarii Tsyhaniuk",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "pino": "^9.9.4",
    "telegraf": "^4.16.3",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.1",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "pino-pretty": "^13.1.1",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{ts,js,json}": [
      "prettier -w",
      "eslint --fix"
    ]
  }
}
